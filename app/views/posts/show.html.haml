#main-wrapper
  #post
    .post.clearfix{:id => "post-#{post.id}"}
      .p-main.clearfix
        .clearfix
          .p-author
            = render "users/basic_user_display", user: post.author, pic_size: "md"
            %p= time_ago_in_words(post.created_at) + " ago"
        .p-content
          = post.content
        - if user_signed_in?
          .p-functions
            .functions
              = render 'likes/like', id: post.id, type: "Post", likes: post.likes.length, thing: post
              = link_to new_comment_path(post: post.id), method: :get, id: "make-comment", remote: true  do
                %span.glyphicon.glyphicon-comment{"aria-hidden" => "true"}
      .p-comments
        = render post.comments
