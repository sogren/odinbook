<div class="post clearfix">
	<div class="author-pic">
			<%= "IMAGE" %>
	</div>

	<div class="main">
		<div class="author">
			<%= post.author.first_name %>
			<%= post.author.last_name %>
		</div>

		<div class="content">
			<%= post.content %>
		</div>

		<div class="functions">
			<%= button_to "Like", likes_path(post: post, likeable_type: post.class.name), method: :post %>
		</div>
	</div>
</div>