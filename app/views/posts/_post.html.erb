<div class="post clearfix" id="post-<%= post.id %>">
	<div class="author-pic">
			<%= "IMAGE" %>
	</div>

	<div class="main">
		<div class="author">
			<%= post.author.first_name %>
			<%= post.author.last_name %>
		</div>

		<div class="content">
			<%= post.content %>
		</div>

		<div class="functions">
			<%= button_to "Like", likes_path(post: post, likeable_type: post.class.name), method: :post %>
			<%= button_to "Comment", new_comment_path(post: post, commentable_type: post.class.name), method: :get, remote: true %>
		</div>
	</div>
	<div class="post comments">
		<%= render post.comments %>
	</div> 
</div>