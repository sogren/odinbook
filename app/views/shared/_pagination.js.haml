- if @posts
  $('.posts').append('#{j render @posts}');
  - if @posts.next_page
    $('#inf-scroll .pagination').replaceWith('#{j will_paginate @posts}');
  - else
    $(window).off('scroll');
    $('#inf-scroll .pagination').remove();
- elsif @comments
  $('.paginate-comments##{@post.id}').parent().append('#{j render @comments}');
  - if @comments.next_page
    $('.paginate-comments##{@post.id} .pagination').replaceWith('#{j will_paginate @comments}');
  - else
    $('.paginate-comments##{@post.id} .pagination').remove();