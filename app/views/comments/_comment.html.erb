<div class="comment clearfix" id="comment-<%= comment.id %>">
	<div class="c-main">

		<div class="c-image">
			<%= "IMG" %>
		</div>

		<div class="c-core">
			<div class="c-content">
				<p><b><%= comment.author.first_name + " " + comment.author.last_name %></b>
					<%= comment.content %>
				</p>
			</div>
	
			<div class="c-functions">
				<%= render partial: "functions", locals: { thing: comment } %>
			</div>
		</div>

	</div>

	<div class="c-comments">
		<%= render comment.comments %>
	</div>
</div>