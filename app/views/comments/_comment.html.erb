<div class="comment clearfix" id="comment-<%= comment.id %>">
	<div class="c-main">

		<div class="user-pic-sm">
			<%= image_tag comment.author.avatar.url %>
		</div>

		<div class="c-core">
			<div class="c-content">
				<p><b><%= link_to "#{comment.author.full_name}", user_profile_path(comment.author.id) %></b>
					<%= comment.content %>
				</p>
			</div>
	
			<div class="c-functions">
				<div class="functions">
					<%= link_to likes_path(likeable_id: comment.id, likeable_type: "Comment"), method: :post, id: "like-comment", remote: true do %>
						<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
					<% end %><%= comment.likes.length %>
					<%= link_to new_comment_path(post: comment.post.id), method: :get, id: "make-comment", remote: true  do %>
						<span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
					<% end %>
					<p><%= time_ago_in_words(comment.created_at) + " ago" %></p>
				</div>
			</div>
		</div>

	</div>
</div>