= simple_form_for new_chat_message, url: chat_chat_messages_path(chat_id: chat_id), html: { class: "clearfix" }, remote: true do |f|
  .form-inputs
    = f.input :content, required: true
    = f.hidden_field :chat_id, { value: chat_id }
  .actions
    = f.button :button do
      %span.glyphicon.glyphicon-send
