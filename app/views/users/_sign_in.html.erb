<div id="unlog-navbar">
  <p>Odinbook</p>
  <div id="log-in-form">
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-inline" } ) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", required: true %>
    </div>
  
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control", required: true %>
    </div>
    <br/>
    <br/>
    
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <%= f.submit "Log in", class: "btn btn-default",style:"float:right" %>
  <% end %>
  </div>
</div>
