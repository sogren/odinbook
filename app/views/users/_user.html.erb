<div class="user clearfix">
	<div class="user-pic-lg">
			<%= image_tag user.avatar.url %>
	</div>

	<div class="main">
		<div class="user-name"> 
			<% if user.profile.private %>
				<%= link_to "#{user.first_name} #{user.last_name}", user_profile_path(user.id) %>
			<% else %>
				<%= "#{user.first_name} #{user.last_name}" %>
			<% end %>
		</div>

		<div class="info"> 
			<%= "some info about this user" %>
		</div>

		<div class="functions">
			<%= "FUNCTIONS" %>
		</div>
	</div>
</div>