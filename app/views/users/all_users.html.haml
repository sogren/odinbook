#main-wrapper
  #people
    #wrapper-chunk
      #all-users
        - if user_signed_in?
          - @users.each do |user|
            .user-people.clearfix
              = render "users/basic_user_display", user: user, pic_size: "sm"
              .message
                = friend_button(user) if user != current_user
        - else
          - @users.each do |user|
            .user-people.clearfix
              = render "users/basic_user_display", user: user, pic_size: "sm"
