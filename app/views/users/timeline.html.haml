#main-wrapper.clearfix
  #dashboard-posts
    - if user_signed_in?
      .new-post
        = render partial: "posts/form", locals: { receiver: (user.id if user != current_user) }
      - if @posts.length > 0
        .posts
          = render @posts
          #inf-scroll
            = will_paginate @posts, page_links: false
      - else
        .posts
          %p
            %b This user has no posts!
